# Local Development Environment Configuration
# This file is safe to commit to Git - contains no production secrets

# Environment
ENVIRONMENT=local
TAG=dev

# NestJS Target Configuration
NESTJS_TARGET=nginx:80
NESTJS_NETWORK=host.docker.internal:3000

# Authentication for token-manager
AUTH_URL=http://host.docker.internal:3000/auth/login
MONGO_DB_METRICS_USERNAME=monitoring@system.com
MONGO_DB_METRICS_PASSWORD=MonitoringSystem123!

# Prometheus Configuration
PROMETHEUS_CONFIG_PATH=/etc/prometheus/prometheus.yml
PROMETHEUS_RELOAD_URL=http://prometheus:9090/-/reload
TOKEN_REFRESH_INTERVAL_MINUTES=50

# Logging
LOG_LEVEL=INFO
