# Production Environment Configuration Template
# Copy this to .env.prod and fill in production values
# DO NOT commit .env.prod with real credentials!

# Environment
ENVIRONMENT=production
TAG=latest

# NestJS Target Configuration
NESTJS_TARGET=nginx:80
NESTJS_NETWORK=nestjs-nginx-prod:80

# Authentication for token-manager
AUTH_URL=http://nestjs-nginx-prod:80/auth/login
MONGO_DB_METRICS_USERNAME=monitoring@system.com
MONGO_DB_METRICS_PASSWORD=<REPLACE_WITH_PRODUCTION_PASSWORD>

# Prometheus Configuration
PROMETHEUS_CONFIG_PATH=/etc/prometheus/prometheus.yml
PROMETHEUS_RELOAD_URL=http://prometheus:9090/-/reload
TOKEN_REFRESH_INTERVAL_MINUTES=50

# Logging
LOG_LEVEL=WARNING
